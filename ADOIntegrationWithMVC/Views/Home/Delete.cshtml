@model ADOIntegrationWithMVC.Models.Employee
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="row justify-content-center align-items-center mt-5">
        <form action="" method="post" class=" border border-3 border-info rounded-3 alert alert-success p-3 w-50">
            <h2 class="text-center alert alert-warning">Are you sure you want to delete this...!!!</h2>
            <table style="margin-left:20%" class="p-2 fw-bold">
                <tr>
                    <td>@Html.DisplayNameFor(model => model.EmpId)</td>
                    <td> @Html.DisplayFor(model => model.EmpId)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.EmpName)</td>
                    <td> @Html.DisplayFor(model => model.EmpName)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.Salary)</td>
                    <td>@Html.DisplayFor(model => model.Salary)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Job)</td>
                    <td> @Html.DisplayFor(model => model.Job)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Dname)</td>
                    <td>@Html.DisplayFor(model => model.Dname)</td>
                </tr>
                <thead> @Html.ActionLink("Back to List", "EmpDetails")</thead>
                <tr>
                    @using (Html.BeginForm())
                     {
                        @Html.AntiForgeryToken()

                        <td class="form-actions" style="width:80%">
                            <input type="submit" value="Delete" class="btn btn-outline-danger p-2 mt-3" style="width:60%" />
                        </td>
                     }
                </tr>
            </table>
        </form>
    </div>
</body>
</html>

